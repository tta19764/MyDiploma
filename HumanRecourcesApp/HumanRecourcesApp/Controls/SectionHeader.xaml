<UserControl x:Class="HumanResourcesApp.Controls.SectionHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HumanResourcesApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="220">

    <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}" 
               Foreground="#999999" 
               FontSize="11" 
               FontWeight="SemiBold" 
               Margin="15,20,15,5"/>

</UserControl>