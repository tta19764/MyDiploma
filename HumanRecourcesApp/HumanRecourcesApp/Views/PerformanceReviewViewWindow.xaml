<Window x:Class="HumanResourcesApp.Views.PerformanceReviewViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HumanResourcesApp.Views"
        mc:Ignorable="d"
        Title="View Performance Review" 
        Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="0,2,8,2"/>
            <Setter Property="Foreground" Value="#666666"/>
        </Style>

        <Style x:Key="InfoValue" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="#2E86DE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D75C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#166ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style x:Key="SectionDivider" TargetType="Border">
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2E75B6" Padding="20,15" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                         Text="Performance Review Details"
                         FontSize="20"
                         FontWeight="Bold"
                         Foreground="White"/>

                    <Border  Grid.Column="1"
                    Background="#4CAF50" 
                      Padding="10,4"
                      Width="Auto"
                      CornerRadius="4" 
                      DockPanel.Dock="Right">
                        <TextBlock Text="{Binding Review.Status}" 
                             Foreground="White" 
                             FontWeight="SemiBold"/>
                    </Border>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Review Information -->
                <TextBlock Text="Review Information" Style="{StaticResource SectionTitle}"/>
                <Border Style="{StaticResource SectionDivider}"/>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Employee Info -->
                    <TextBlock Text="Employee:" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                    <TextBlock Text="{Binding EmployeeName}" Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoValue}" Margin="75,2,0,2"/>

                    <!-- Reviewer Info -->
                    <TextBlock Text="Reviewer:" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoLabel}"/>
                    <TextBlock Text="{Binding ReviewerName}" Grid.Row="0" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="75,2,0,2"/>

                    <!-- Review Period -->
                    <TextBlock Text="Period:" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                    <TextBlock Text="{Binding Review.ReviewPeriod}" Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoValue}" Margin="75,2,0,2"/>

                    <!-- Review Date -->
                    <TextBlock Text="Date:" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoLabel}"/>
                    <TextBlock Text="{Binding Review.ReviewDate}" Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="75,2,0,2"/>

                    <!-- Submission Date -->
                    <TextBlock Text="Submitted:" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                    <TextBlock Text="{Binding Review.SubmissionDate}" Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoValue}" Margin="75,2,0,2"/>

                    <!-- Acknowledgement Date -->
                    <TextBlock Text="Acknowledged:" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoLabel}"/>
                    <TextBlock Text="{Binding Review.AcknowledgementDate}" Grid.Row="2" Grid.Column="1" Style="{StaticResource InfoValue}" Margin="75,2,0,2"/>

                    <!-- Overall Rating -->
                    <TextBlock Text="Overall Rating:" Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoLabel}"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Margin="75,2,0,2">
                        <TextBlock Text="{Binding Review.OverallRating}" Style="{StaticResource InfoValue}"/>
                        <TextBlock Text="/5" Style="{StaticResource InfoValue}" Margin="2,2,0,2"/>
                    </StackPanel>
                </Grid>

                <!-- Performance Criteria Scores -->
                <TextBlock Text="Performance Criteria" Style="{StaticResource SectionTitle}"/>
                <Border Style="{StaticResource SectionDivider}"/>

                <ItemsControl ItemsSource="{Binding PerformanceScores}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" 
                                  BorderThickness="1" 
                                  CornerRadius="4" 
                                  Padding="15"
                                  Margin="0,0,0,10"
                                  Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                        <TextBlock Text="{Binding Criteria.CriteriaName}" 
                                                 FontWeight="SemiBold" 
                                                 FontSize="14"/>
                                        <TextBlock Text="{Binding Criteria.Description}" 
                                                 Foreground="#666"
                                                 TextWrapping="Wrap"
                                                 Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="Score: " VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Score}" 
                                                 FontWeight="Bold"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text="/5" 
                                                 FontWeight="SemiBold"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" 
                                          BorderBrush="#EEEEEE" 
                                          BorderThickness="0,1,0,0" 
                                          Margin="0,10,0,0" 
                                          Padding="0,10,0,0"
                                          Visibility="{Binding Comments, Converter={StaticResource StringToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Comments}" 
                                                 TextWrapping="Wrap"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Overall Comments -->
                <TextBlock Text="Comments" Style="{StaticResource SectionTitle}"/>
                <Border Style="{StaticResource SectionDivider}"/>

                <Border BorderBrush="#DDD" 
                      BorderThickness="1" 
                      CornerRadius="4" 
                      Padding="15"
                      Background="White">
                    <TextBlock Text="{Binding Review.Comments}" 
                             TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Button Panel -->
        <Border Grid.Row="2" Background="White" BorderBrush="#EEEEEE" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right" 
                      Margin="20,12">
                <Button Content="Close" 
                      Command="{Binding CloseCommand}"
                      Style="{StaticResource ActionButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>