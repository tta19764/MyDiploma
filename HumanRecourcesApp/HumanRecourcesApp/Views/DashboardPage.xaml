<Page x:Class="HumanResourcesApp.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HumanResourcesApp.Views"
      xmlns:classes="clr-namespace:HumanResourcesApp.Classes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1060"
      Title="Dashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Dashboard Header -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="{Binding UserFullName}" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding CurrentDate, StringFormat='{}{0:dddd, MMMM d, yyyy}'}" 
                           Foreground="#777777" 
                           FontSize="14" 
                           Margin="0,0,0,20"/>
            </StackPanel>

            <!-- Summary Cards Row -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Employees Card -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,0,10,0"
                        BorderBrush="#EEEEEE"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Total Employees" 
                                   FontSize="14" 
                                   Foreground="#777777"/>

                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalEmployeesCount}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Margin="0,5,0,5"/>

                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal">
                            <TextBlock Text="{Binding EmployeeChangePercentage, StringFormat='{}{0:+0.0;-0.0}%'}" 
                                       FontSize="12"
                                       Foreground="{Binding EmployeeChangePercentage, Converter={StaticResource PercentageColorConverter}}"/>
                            <TextBlock Text=" from last month" 
                                       FontSize="12" 
                                       Foreground="#777777"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Attendance Card -->
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="10,0"
                        BorderBrush="#EEEEEE"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Today's Attendance" 
                                   FontSize="14" 
                                   Foreground="#777777"/>

                        <TextBlock Grid.Row="1" 
                                   Text="{Binding AttendancePercentage, StringFormat='{}{0:0.0}%'}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Margin="0,5,0,5"/>

                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal">
                            <TextBlock Text="{Binding AbsentEmployeesCount}" 
                                       FontSize="12" 
                                       Foreground="#ff6b6b"/>
                            <TextBlock Text=" employees absent" 
                                       FontSize="12" 
                                       Foreground="#777777"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Pending Time-off Card -->
                <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="10,0"
                        BorderBrush="#EEEEEE"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Pending Time-off" 
                                   FontSize="14" 
                                   Foreground="#777777"/>

                        <TextBlock Grid.Row="1" 
                                   Text="{Binding PendingTimeOffRequestsCount}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Margin="0,5,0,5"/>

                        <TextBlock Grid.Row="2" 
                                   Text="requiring approval" 
                                   FontSize="12" 
                                   Foreground="#777777"/>
                    </Grid>
                </Border>

                <!-- Upcoming Reviews Card -->
                <Border Grid.Column="3" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="10,0,0,0"
                        BorderBrush="#EEEEEE"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Upcoming Reviews" 
                                   FontSize="14" 
                                   Foreground="#777777"/>

                        <TextBlock Grid.Row="1" 
                                   Text="{Binding UpcomingReviewsCount}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Margin="0,5,0,5"/>

                        <TextBlock Grid.Row="2" 
                                   Text="in the next 30 days" 
                                   FontSize="12" 
                                   Foreground="#777777"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Middle Row - Department/Gender Stats and Attendance Chart -->


            <!-- Bottom Row - Two Column Layout -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    BorderBrush="#EEEEEE"
                    BorderThickness="1"
                    Margin="0 0 10 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                            Text="Employee Distribution" 
                            FontWeight="SemiBold" 
                            FontSize="16" 
                            Margin="0,0,0,15"/>

                        <!-- Replace with actual chart control -->
                        <Border Grid.Row="1" 
                            Background="#F8F9FA" 
                            CornerRadius="6">
                            <TextBlock Text="[Department Distribution Chart]" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                FontStyle="Italic" 
                                Foreground="#777777"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Right Column - Recent Activities -->
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="10,0,0,0"
                        BorderBrush="#EEEEEE"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="49*"/>
                                <ColumnDefinition Width="400*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Quick Actions" 
                                       FontWeight="SemiBold" 
                                       FontSize="16" Grid.ColumnSpan="2"/>
                        </Grid>

                        <UniformGrid Grid.Row="1" 
                                     Rows="2" 
                                     Columns="2" 
                                     Margin="0,15,0,0">

                            <!-- Add Employee Button -->
                            <Button Margin="5" 
                                    Padding="15" 
                                    Background="#F8F9FA" 
                                    BorderThickness="1" 
                                    BorderBrush="#EEEEEE" 
                                    Command="{Binding AddEmployeeCommand}">
                                <StackPanel>
                                    <TextBlock Text="👤" 
                                               FontSize="20" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Add Employee" 
                                               FontWeight="Medium" 
                                               Margin="0,5,0,0" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Approve Time Off Button -->
                            <Button Margin="5" 
                                    Padding="15" 
                                    Background="#F8F9FA" 
                                    BorderThickness="1" 
                                    BorderBrush="#EEEEEE" 
                                    Command="{Binding ApproveTimeOffCommand}">
                                <StackPanel>
                                    <TextBlock Text="📅" 
                                               FontSize="20" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Approve Time Off" 
                                               FontWeight="Medium" 
                                               Margin="0,5,0,0" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Schedule Review Button -->
                            <Button Margin="5" 
                                    Padding="15" 
                                    Background="#F8F9FA" 
                                    BorderThickness="1" 
                                    BorderBrush="#EEEEEE" 
                                    Command="{Binding ScheduleReviewCommand}">
                                <StackPanel>
                                    <TextBlock Text="📝" 
                                               FontSize="20" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Schedule Review" 
                                               FontWeight="Medium" 
                                               Margin="0,5,0,0" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Process Payroll Button -->
                            <Button Margin="5" 
                                    Padding="15" 
                                    Background="#F8F9FA" 
                                    BorderThickness="1" 
                                    BorderBrush="#EEEEEE" 
                                    Command="{Binding ProcessPayrollCommand}">
                                <StackPanel>
                                    <TextBlock Text="💰" 
                                               FontSize="20" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Process Payroll" 
                                               FontWeight="Medium" 
                                               Margin="0,5,0,0" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </UniformGrid>

                        <Border Grid.Row="2" 
                                Background="#FFF8E5" 
                                CornerRadius="6" 
                                Padding="15" 
                                Margin="0,15,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="⚠️" 
                                           FontSize="22" 
                                           VerticalAlignment="Top" 
                                           Margin="0,0,10,0"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Payroll Alert" 
                                               FontWeight="SemiBold" 
                                               Foreground="#D69E2E"/>
                                    <TextBlock Text="Next payroll processing is due in 3 days. Please ensure all time records are approved." 
                                               TextWrapping="Wrap" 
                                               Foreground="#AF7F14" 
                                               FontSize="13" 
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>