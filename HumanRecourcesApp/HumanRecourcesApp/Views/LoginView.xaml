<Window x:Class="HumanResourcesApp.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HumanResourcesApp.Views"
        mc:Ignorable="d"
        Title="HR Management System - Login"
        Width="600"
        Height="580"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#3498db" Height="80">
            <StackPanel VerticalAlignment="Center" Margin="30,0">
                <TextBlock Text="HR Management System" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Sign in to your account" 
                           FontSize="14" 
                           Foreground="#E6FFFFFF" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="4" 
                Margin="30,20,30,20" 
                Padding="30"
                Height="auto"
                BorderThickness="1"
                BorderBrush="#EEEEEE">

            <StackPanel VerticalAlignment="Center">
                <!-- Username -->
                <TextBlock Text="Username" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <TextBox Style="{StaticResource TextBoxStyle}" 
                         x:Name="UsernameTextBox"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding UsernameError}" 
                           Foreground="Red" 
                           FontSize="12" 
                           Margin="0,3,0,15" 
                           Height="15"/>

                <!-- Password -->
                <TextBlock Text="Password" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <PasswordBox Style="{StaticResource PasswordBoxStyle}" 
                             x:Name="PasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBlock Text="{Binding PasswordError}" 
                           Foreground="Red" 
                           FontSize="12" 
                           Margin="0,3,0,20" 
                           Height="15"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           FontWeight="SemiBold" 
                           TextAlignment="Center" 
                           Margin="0,0,0,20" 
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button Content="Sign In" 
                        Style="{StaticResource RoundedButtonStyle}" 
                        Command="{Binding LoginCommand}" 
                        CommandParameter="{Binding ElementName=PasswordBox}"
                        Height="45" 
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="2" 
                   Text="© 2025 Your Company. All rights reserved." 
                   Foreground="#777777" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15"/>
    </Grid>
</Window>
